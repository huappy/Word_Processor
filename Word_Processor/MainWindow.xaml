<Window x:Class="Word_Processor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word_Processor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height ="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<!--Document Editor-->
		<TextBox Grid.Row="0"
				 AcceptsReturn ="True"
				 TextWrapping="Wrap"
				 VerticalScrollBarVisibility="Auto"
				 FontSize="16"
				 Text ="{Binding DocumentText, UpdateSourceTrigger = PropertyChanged}">
		</TextBox>

		<!--Word Count-->
		<TextBlock Grid.Row="1"
				   Text ="Word Count: {Binding WordCount}"
				   FontWeight="Bold"
				   FontSize = "14"
				   HorizontalAlignment="Right"
				   Margin="0,10,0,0">

		</TextBlock>
		<StackPanel Orientation="Horizontal" Margin="0,10,0,10">
			<Button Content="Save" Command="{Binding SaveCommand}" Margin="5"/>
			<Button Content="Load" Command="{Binding LoadCommand}" Margin="5"/>
		</StackPanel>
    </Grid>
</Window>
